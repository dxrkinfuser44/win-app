<Page x:Class="ProtonVPN.Client.UI.Main.NoServersPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:CommunityToolkit.WinUI.Controls"
      xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:home="using:ProtonVPN.Client.UI.Main.Home"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:sidebar="using:ProtonVPN.Client.UI.Main.Sidebar"
      xmlns:widgets="using:ProtonVPN.Client.UI.Main.Widgets"
      xmlns:components="using:ProtonVPN.Client.UI.Login.Components"
      x:DefaultBindMode="OneWay"
      AutomationProperties.AutomationId="NoServersPage"
      AutomationProperties.Name="{x:Bind ViewModel.Localizer.Get('Automation_Properties_NoServers_Page')}"
      NavigationCacheMode="Required"
      mc:Ignorable="d">

    <Grid x:Name="LayoutRoot"
          Background="{ThemeResource TransparentColorBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding Source={StaticResource MainTitleBarHeight}, Converter={StaticResource DoubleToPixelGridLengthConverter}}" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <components:DisableKillSwitchBannerComponent Grid.Row="1"
                                                     HorizontalAlignment="Center" />

        <Grid Grid.Row="2"
              MaxWidth="500"
              VerticalAlignment="Center"
              RowSpacing="40"
              Visibility="{x:Bind ViewModel.IsRefreshing, Converter={StaticResource NotBooleanToVisibilityConverter}}">

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Image Grid.Row="0"
                   Width="320"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Source="{StaticResource NoVpnConnectionsIllustrationSource}" />

            <StackPanel Grid.Row="1"
                        HorizontalAlignment="Center"
                        Spacing="12">
                <TextBlock HorizontalAlignment="Center"
                           Style="{ThemeResource TitleTextBlockStyle}"
                           Text="{x:Bind ViewModel.Title}"
                           TextWrapping="Wrap" />
                <TextBlock HorizontalAlignment="Center"
                           Foreground="{ThemeResource TextWeakColorBrush}"
                           Style="{ThemeResource BodyMediumTextBlockStyle}"
                           Text="{x:Bind ViewModel.Description}"
                           TextWrapping="Wrap" />
            </StackPanel>

            <StackPanel Grid.Row="2"
                        Spacing="24">
                <Grid HorizontalAlignment="Stretch"
                      ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            HorizontalAlignment="Stretch"
                            Command="{x:Bind ViewModel.RefreshCommand, Mode=OneTime}"
                            Content="{x:Bind ViewModel.Localizer.Get('Common_Actions_Refresh')}"
                            Style="{ThemeResource LargePrimaryButtonStyle}"
                            Visibility="{x:Bind ViewModel.IsRefreshButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <Button Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            Command="{x:Bind ViewModel.SignOutCommand, Mode=OneTime}"
                            Content="{x:Bind ViewModel.Localizer.Get('NoServers_SignOut')}"
                            Style="{ThemeResource LargeSecondaryButtonStyle}"
                            Visibility="{x:Bind ViewModel.IsSignOutButtonVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </Grid>
                <Grid HorizontalAlignment="Center"
                      ColumnSpacing="2"
                      Visibility="{x:Bind ViewModel.HasServersRequestFailed, Converter={StaticResource BooleanToVisibilityConverter}}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               Foreground="{ThemeResource TextWeakColorBrush}"
                               Style="{ThemeResource BodyTextBlockStyle}"
                               Text="{x:Bind ViewModel.Localizer.Get('NoServers_NeedHelp')}" />
                    <HyperlinkButton Grid.Column="1"
                                     VerticalAlignment="Center"
                                     Command="{x:Bind ViewModel.ContactUsCommand, Mode=OneTime}"
                                     Content="{x:Bind ViewModel.Localizer.Get('NoServers_ContactUs')}"
                                     Style="{StaticResource DefaultHyperlinkButtonStyle}" />
                </Grid>

            </StackPanel>
        </Grid>

        <ProgressRing Grid.RowSpan="3"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      IsActive="{x:Bind ViewModel.IsRefreshing}"
                      Visibility="{x:Bind ViewModel.IsRefreshing, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</Page>