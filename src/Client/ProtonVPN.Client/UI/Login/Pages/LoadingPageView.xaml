<Page x:Class="ProtonVPN.Client.UI.Login.Pages.LoadingPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:pathIcons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
      x:DefaultBindMode="OneWay"
      AutomationProperties.AutomationId="LoadingPage"
      AutomationProperties.Name="{x:Bind ViewModel.Message}"
      NavigationCacheMode="Required"
      mc:Ignorable="d">

    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          RowSpacing="16">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="24">
            <ProgressRing Width="36"
                          Height="36"
                          IsActive="True" />

            <StackPanel Spacing="8">
                <TextBlock HorizontalAlignment="Center"
                           Style="{ThemeResource BodyMediumStrongTextBlockStyle}"
                           Text="{x:Bind ViewModel.Message}"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />

                <TextBlock HorizontalAlignment="Center"
                           Foreground="{ThemeResource TextWeakColorBrush}"
                           Style="{ThemeResource BodyTextBlockStyle}"
                           Text="{x:Bind ViewModel.Localizer.Get('Main_Loading_SigningIn_Longer')}"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Visibility="{x:Bind ViewModel.IsSignInTakingLongerThanExpected, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StackPanel>

            <Button HorizontalAlignment="Center"
                    AutomationProperties.AutomationId="CancelSignInButton"
                    Command="{x:Bind ViewModel.CancelSignInCommand, Mode=OneTime}"
                    Content="{x:Bind ViewModel.Localizer.Get('Common_Actions_Cancel')}"
                    Style="{ThemeResource SecondaryButtonStyle}"
                    Visibility="{x:Bind ViewModel.IsSigningIn, Converter={StaticResource BooleanToVisibilityConverter}}" />
        </StackPanel>

        <Grid Grid.Row="1"
              HorizontalAlignment="Left"
              ColumnSpacing="8">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <pathIcons:Lightbulb Grid.Column="0"
                                 VerticalAlignment="Top"
                                 Foreground="{ThemeResource TextWeakColor}"
                                 Size="Pixels16" />

            <TextBlock Grid.Column="1"
                       VerticalAlignment="Top"
                       Foreground="{ThemeResource TextWeakColor}"
                       Style="{ThemeResource CaptionTextBlockStyle}"
                       Text="{x:Bind ViewModel.Localizer.Get('LoadingPage_Tip')}"
                       TextWrapping="Wrap" />
        </Grid>

    </Grid>
</Page>